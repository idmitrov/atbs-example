+init() {
    .cursor-pointer {
        cursor: pointer;
    }

    .text-uppercase {
        text-transform: uppercase;
    }

    .text-decoration-none {
        text-decoration: none;
    }

    .striped-bottom {
        padding-bottom: toUnit(16);
        border-bottom: dashed toUnit(1);

        for $colorName, $colorValue in $ui.color {
            &.striped-color-{$colorName} {
                border-color: $colorValue;
            }
        }
    }
}